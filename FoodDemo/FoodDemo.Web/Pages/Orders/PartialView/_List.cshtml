@using FoodDemo.Data.Entity

@model Order

<div class="card margin border-color-strip" style="width: 18rem;">
    <div class="card-body">
        <label class="card-title font-weight-bold">Ref No: @Model.Id</label>
        <span class="badge badge-warning right">Status: @Model.Status</span>
        <hr />
        <label class="small">Customer Name:</label>
        <p class="card-text">@Model.Customers.FirstName @Model.Customers.LastName</p>
        <label class="small">Date:</label>
        <p class="card-text">@Model.Date</p>

        <hr />
        <div class="btn-group" role="group" aria-label="Basic example">
            <a class="btn btn-info btn-sm" asp-page="../OrderLines/Detail" asp-route-orderlineId="@Model.Id">More</a>
            <a class="btn btn-warning btn-sm" data-toggle="modal" data-target="#exampleModalCenter" asp-route-orderLineId="@Model.Id">Edit</a>
            <button type="button" class="btn btn-danger btn-sm">Remove</button>
        </div>
    </div>
</div>